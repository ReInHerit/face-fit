MainLayout:

<MyButton>:
<MyCamera>:
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<ColorBox@BoxLayout+BackgroundColor>
    background_color: 0, 0, 1, 0
<StatsLabel@Label+BackgroundColor>
    text_size: self.size[0], dp(25)
    halign: 'center'
    valign: 'middle'
    background_color: .1,.1,.1,1
<ColorPB@ProgressBar+BackgroundColor>
    background_color: .1,.1,.1,1
    max: 100
    size_hint: 1, .3

<MainLayout>:
    cols: 3
    BoxLayout:
        id: l_side
        size: root.width*0.2, root.height
        orientation: 'vertical'
        Label:
            text: ''
            height: '20dp'
            text_size: self.width, self.height
            padding: 5,5
            size_hint: 1, .1
            halign: 'center'
            valign: 'bottom'
        ScrollView:
            id: l_sv
            do_scroll_y: True
            scroll_y: r_sv.scroll_y
            pos_hint: {'top': 1}
            size_hint: 1, .9
            padding: 5,5,5,5
            GridLayout:
                id: l_scroll
                padding:0, 25, 0, 0
                cols:1
                spacing:20
                size_hint_y:None

    BoxLayout:
        id: c_side
        size: root.width*0.6, root.height
        pos: root.width*0.2, 0
        orientation: 'vertical'
        Label:
            text: 'FACE FIT'
            bold: True
            text_size: self.size
            size: self.width, self.height
            size_hint: 1, .1
            halign: 'center'
            valign: 'middle'

        ColorBox:
            id: c_box
            orientation: 'vertical'
            background_color: .2, .2, .2, 1

            ColorBox:
                size_hint: 1, .2
                orientation: 'horizontal'
                background_color: .05,.05,.05,1
                padding: 0, 5, 0, 0

                BoxLayout:
                    size_hint: .05, 1
                    orientation: 'vertical'
                BoxLayout:
                    size_hint: .1, 1
                    orientation: 'vertical'
                    StatsLabel:
                        text: ''
                        background_color: .05,.05,.05,1

                    StatsLabel:
                        id: rot_x
                        text: 'X Rotation'
                        halign: 'right'
                    StatsLabel:
                        id: rot_y
                        text: 'Y Rotation'
                        halign: 'right'

                    StatsLabel:
                        id: rot_z
                        text: 'Z Rotation'
                        halign: 'right'


                BoxLayout:
                    size_hint: .15, 1
                    orientation: 'vertical'
                    StatsLabel:
                        text: 'Painting'
                        background_color: .05,.05,.05,1
                    StatsLabel:
                        id: ref_x
                        text: root.ref_x

                    StatsLabel:
                        id: ref_y
                        text: root.ref_y

                    StatsLabel:
                        id: ref_z
                        text: root.ref_z

                BoxLayout:
                    size_hint: .15, 1
                    orientation: 'vertical'
                    StatsLabel:
                        text: 'Camera'
                        background_color: .05,.05,.05,1
                    StatsLabel:
                        id: cam_x
                        text: root.cam_x

                    StatsLabel:
                        id: cam_y
                        text: root.cam_y

                    StatsLabel:
                        id: cam_z
                        text: root.cam_z
                BoxLayout:
                    size_hint: .3, 1
                    orientation: 'vertical'

                    StatsLabel:
                        text: 'Match Up'
                        background_color: .05,.05,.05,1
                        size_hint: 1, .3
                    ColorPB:
                        id: pb_x
                        value: root.pb_x

                    ColorPB:
                        id: pb_y
                        value: root.pb_y

                    ColorPB:
                        id: pb_z
                        value: root.pb_z
                BoxLayout:
                    size_hint: .05, 1
                    orientation: 'vertical'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: .2, 1
                    StatsLabel:
                        text: 'click to end session and send mail with results'
                        background_color: .05,.05,.05,1
                    Button:
                        id: checkout
                        text: 'click'
                        on_press:root.checkout()
            MyCamera:
                id: view
                source: root.source
                size_hint: 1, 1
                allow_stretch: True


    BoxLayout:
        id: r_side
        orientation: 'vertical'
        size: root.width*0.2, root.height
        pos: root.width*0.8, 0
        Label:
            text: ''
            height: '20dp'
            text_size: self.width, self.height
            padding: 5,5
            size_hint: 1, .1
            halign: 'center'
            valign: 'bottom'
        ScrollView:
            id: r_sv
            pos_hint: {'top': 1}
            scroll_b: root.scroll
            do_scroll_y:True
            scroll_y: l_sv.scroll_y

            size_hint: 1, .9
            padding: 5,5,5,5
            GridLayout:
                id: r_box_grid
                padding:0, 25, 0, 0
                cols: 1
                spacing:20
                size_hint_y:None

