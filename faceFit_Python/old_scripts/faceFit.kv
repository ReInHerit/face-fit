mainLayout:


<mainLayout>:

    cols: 3
    BoxLayout:
        id: l_side
        size: root.width*0.2, root.height
        ScrollView:
            GridLayout:
                id: box_grid
                cols: 1
                spacing:20
                size_hint_y:None
                #padding=[0,25,0,0]

    BoxLayout:
        id: c_side
        size: root.width*0.6, root.height

        pos: root.width*0.2, 0
        orientation: 'vertical'
        Label:
            text: 'B'
            size: self.width, '25dp'
            size_hint: None, None



        Image:
            size_hint: 1, .2
            allow_stretch: True
            color: 0,0,0
    BoxLayout:
        id: r_side
        orientation: 'vertical'
        size: root.width*0.2, root.height
        pos: root.width*0.8, 0
        Label:
            text: 'results'
            size: self.width, '25dp'
            size_hint: None, None
        GridLayout:
            cols: 1


<MyButton@Image>:
    Button:
        source: None

        size_hint_y: None
        height: 150
        Image:
            source: root.source
            pos: root.pos
            size: root.size