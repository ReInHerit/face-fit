#:kivy 2.1.0

<MyLayout>:
    BoxLayout:
        id: super_box
        orientation: "horizontal"
        size: root.width, root.height

        BoxLayout:
            id: l_box
            orientation: 'vertical'
            size: (400,1000)
            size_hint: (None, None)

            Label:
                id: title_l
                text:str(root.myText.text)
                size: (400,200)
                size_hint: (1, 0.2)
            ScrollView:
                id: sc_view
                size_hint: (1, 0.8)
                size: (400, 800)

                GridLayout:
                    id: box
                    padding: [0,25,0,0]
                    cols: 1
                    spacing: 20
                    size_hint_y: None

        BoxLayout:
            id: c_box
            orientation: 'vertical'
            size: (800,1000)
            size_hint: (None, None)

            Label:
                id: title
                text:'Questo è il titolo'
                size_hint: 1, .2

            Label:
                id: title2
                text:'Questo è il titolo'
                size_hint: 1, .1

            Image:
                id: feed
                color: 0, 255, 0
                opacity: 1
                size_hint: 1, 10

        BoxLayout:
            id: r_box
            orientation: 'vertical'

            Label:
                id: title3
                text:'Questo è il titolo'
                size_hint: 1, .2

            Image:
                id: result
                color: 0, 0, 0
                opacity: 1
                size_hint: 1, 10