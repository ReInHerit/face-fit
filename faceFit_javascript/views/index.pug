extends layout

block layout-content
    // - let new_img = 'images/FACE_16_thumb.jpg'

    main.container
        #left.asnav2Class
            each file in data
                .select_ch
                    button.ref_btn(type='button')
                        img.img_ref(src=file, crossorigin="anonymous")

        #middle.camView
            #hints_section
                table(style='width:100%')
                    tr
                        th(style='width:15%') HINTS
                        th(style='width:10%') painting
                        th(style='width:10%') camera
                        th(style='width:65%') progress
                    tr
                        td rot x
                        td#ref_x
                        td#cam_x
                        td
                            #pb_x
                    tr
                        td rot y
                        td#ref_y
                        td#cam_y
                        td
                            #pb_y
                    tr
                        td rot z
                        td#ref_z
                        td#cam_z
                        td
                            #pb_z
            canvas#canvas
                image#ref_img(src='')
        video#webcam.invisible(autoplay="true" muted width="1280" height="960")
        canvas#cam_canvas(width="1280" height="960")
        #right.asnav1Class
            each n in data
                .show_morph
                    button.morph_btn(type='button')
                        img.img_morph(src='images/Thumbs/morph_thumb.jpg')


    script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh')
    script(src='https://cdn.jsdelivr.net/npm/@tensorflow/tfjs-core')
    script(src='https://cdn.jsdelivr.net/npm/@tensorflow-models/face-landmarks-detection@1.0.1/dist/face-landmarks-detection.min.js')
    script(src="https://cdn.jsdelivr.net/gh/nicolaspanel/numjs@0.15.1/dist/numjs.min.js")


    script(src="./js/main.js")
    script(async='' src='/js/opencv.js' type="text/javascript" defer='' onload="opencvIsReady()")


