extends layout

block layout-content
    main.container
        a(href="javascript:(function(){var script=document.createElement('script');script.src='https://rawgit.com/paulirish/memory-stats.js/master/bookmarklet.js';document.head.appendChild(script);})()")
            | Run Memory Stats
        // Popup Window
        #privacy-window(style='display: none;')
            #privacyModal
                h2 Privacy Policy
                p
                    | Before accessing our webapp, please read and confirm that you have read &#x20;
                    a(href="/policy", target="_blank") Privacy Policy.


                label#cofirm_section(for="confirmCheckbox")
                    input#confirmCheckbox(type="checkbox")
                    p I have read and understood the Privacy Policy

                button#confirm_button Confirm
        #email-window(style='display: none;')
          #email-content
              h3 Enter your email:
              input#email-input(type='email')
              button#send-email-button Send Email
        #ref_btns.asnav2Class
            each file in data
                div.select_ch
                    button.ref_btn.button-image
                        img.img_ref(src=file, crossorigin="anonymous")

        #main_view.camView
            #hints_section
                label#hints_title HINTS
                table(style='width:100%')
                    tr
                        td(style='width:15%') Pitch
                        td(style='width:85%')
                            #pb_x
                    tr
                        td Jaw
                        td
                            #pb_y
                    tr
                        td Roll
                        td
                            #pb_z
            canvas#canvas
                image#ref_img(src='' alt='Welcome to Face-Fit')
        video#webcam.invisible(autoplay="true" muted width="1280" height="960")
        canvas#cam_canvas(width="1280" height="960")
        #morph_btns.asnav1Class
            each n in data
                div.show_morph
                    button.morph_btn.button-image
                        img.img_morph(src='images/Thumbs/morph_thumb.jpg')


    script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js')

    script(src="js/main.js" type="module" )




